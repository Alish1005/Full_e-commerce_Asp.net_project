@model IEnumerable<Item>
<h1 style="margin-top:120px;">Items Managment</h1>
<a class="btn btn-outline-success " asp-action="Add" ><i class="bi bi-plus-square"></i>&nbsp; Add Item</a>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
     @foreach (var item in Model)
    {
        <tr>
            <td><img src="@item.IconUrl" style="height:100px;" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td>@item.quantity</td>
            <form asp-action="Delete">
            <td>
                <a class="btn btn-outline-info" name="Edit" asp-action="Update" title="Edit" title="" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i></a>
                
                &nbsp; <button class="btn btn-outline-danger" asp-action="Delete" title="Delete"  asp-route-id="@item.Id"><i class="bi bi-trash"></i></button>
            </td>
            </form>
            
        </tr>

    }
    </tbody>
</table>