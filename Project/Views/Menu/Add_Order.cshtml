
@model Order

<div class="row" style="margin-top:130px">
    <h1> Add Order </h1>
    <div class="col-5">
        <p>Item name: @Model.item.Name</p>
        <p>Description: @Model.item.Description</p>
        <p>Price: @Model.item.Price $</p>

        <form asp-controller="Order" asp-action="AddOrder">
            <label for="quant">Quantity</label>
            <input type="number" id="itemQuantity" asp-for="itemQuantity" class="text-center" min="1" max="@Model.item.quantity" id="quant" required />
            <br />
            <label for="note" class="m-2">Note</label>
            <input type="text" class="" asp-for="note" placeholder="Notes" id="note" style="width:100%" />
           @* <h4 class="mt-4" id="total">Total Price:  $</h4>*@
            <input type="submit" asp-controller="Order" asp-action="AddOrder" asp-route-id="@User.Identity.Name.ToString()" asp-route-id2="@Model.ItemId" class="btn btn-success m-3" value="Add Order" />
            <a  asp-controller="Menu" asp-action="Index" class="btn btn-outline-secondary m-3" >Back to list</a>
        </form>

    </div>
    <div class="col-7">
        <img class="w-50 round rounded-3" src="@Model.item.IconUrl" />
    </div>
</div>
