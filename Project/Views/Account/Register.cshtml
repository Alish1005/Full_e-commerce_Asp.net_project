@model Project.Models.Account.RegisterVM


@{
ViewBag.Title = "Register";
}
<h1 style="margin-top:130px;">Register</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form class="mt-2" method="post" asp-action="Register">
<div asp-validation-summary="ModelOnly" class="text-danger w-50"></div>
        <div class="modal-body text-center">
        <input class="btn btn-secondary border" asp-for="Username" type="text" name="Username" placeholder="Username *" required>
        <br><span asp-validation-for="Username" class="text-danger"></span>
        <br>

            <input class="btn btn-secondary border " asp-for="Email" type="text" name="email" placeholder="Email *" required>
        <br><span asp-validation-for="Email" class="text-danger"></span>
            <br>
            <input class="btn btn-secondary border" asp-for="Address" type="text" name="address" placeholder="Address *" required>
            <span asp-validation-for="Address" class="text-danger"></span>
            <br>

            <input class="btn btn-secondary border mt-3" asp-for="Phone" type="text" name="phone" placeholder="Phone Number *" required>
        <br><span asp-validation-for="Phone" class="text-danger"></span>
            <br>

        <input class="btn btn-secondary border" asp-for="Password" type="password" name="Password" placeholder="Password *" required>
        <br><span asp-validation-for="Password" class="text-danger"></span>
            <br>

        <input class="btn btn-secondary border" asp-for="ConfirmPassword" type="password" name="ConfirmPassword" placeholder="Current Password *" required>
        <br><span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <br>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-success">Sign Up</button>
        </div>
</form>

